class Solution {
    public void merge(int[] nums1, int m, int[] nums2, int n) {
    int p1 = m - 1;
    int p2 = n - 1;
    int p = m + n - 1;

    // First loop: compare elements until one array is exhausted
    for (; p1 >= 0 && p2 >= 0; p--) {
        if (nums1[p1] > nums2[p2]) {
            nums1[p] = nums1[p1];
            p1--;
        } else {
            nums1[p] = nums2[p2];
            p2--;
        }
    }

    // Second loop: copy remaining nums2 (if any)
    for (; p2 >= 0; p--, p2--) {
        nums1[p] = nums2[p2];
    }
}

        
} 
